@using HomeProperty.WebApp.Models

@model LoginViewModel

@{
    //ViewBag.Title = Resources.Account_Login;
    ViewBag.Title = "Login";
}

<h3>@ViewBag.Title</h3>
<div class="row">
    <div class="col-md-4">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl },
                FormMethod.Post, new { @class = "form-vertical", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @*@Html.Label(Resources.Account_Email)*@
                    @Html.Label("Email")
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @*@Html.Label(@Resources.Account_Password)*@
                    @Html.Label("Password")
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.Label("RememberMe")
                            @*@Html.Label(Resources.Account_RememberMe)*@
                        </div>
                    </div>
                    </div>
                <div class="form-group">
                    <input type="submit" @*value='@Resources.Account_Login'*@ value="Login" class="btn btn-success btn-lg btn-block" />
                </div>
                <div class="form-group">
                    @*@Html.ActionLink(Resources.Account_ForgotYourPassword, "ForgotPassword")*@
                    @Html.ActionLink("ForgotPassword", "ForgotPassword")
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}