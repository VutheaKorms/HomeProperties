@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, 
        new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello" + User.Identity.GetUserName() + "!", "Index","Manage",
            routeValues: null, htmlAttributes: new { title= "Manage" })
            
            @*@Html.ActionLink(Resources.Account_Hello + " " + User.Identity.GetUserName() + "!", 
            "Index", Resources.Account_Manage, 
            routeValues: null, htmlAttributes: new { title = Resources.Account_Manage })*@
        </li>
        @*<li><a href="javascript:document.getElementById('logoutForm').submit()">@Resources.Account_Logoff</a></li>*@
        <li><a href="javascript:document.getElementById('logoutForm').submit()">SignOut</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Login", "Login" , "Account", routeValues: null, htmlAttributes: new { id= "loginLink"})
        </li>
        @*<li>@Html.ActionLink(Resources.Account_Login, "Login", "Account", 
        routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
    </ul>
}
